

@model Kinston_eUniversity.Models.Professor

@{
    ViewData["Title"] = "Professor Login";
}

<h2>Professor Login</h2>

@if (ViewBag.Message != null)
{
    <p style="color: red;">@ViewBag.Message</p>
}

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Username">Username (Email):</label>
        <input asp-for="Username" required />
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Login</button>
</form>

<p>Don't have an account?</p>
<a asp-controller="Professor" asp-action="Create">
    <button>Create New Professor Account</button>
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

